generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model profiles {
  id           String         @id @db.VarChar
  created_at   DateTime       @default(now()) @db.Timestamptz(6)
  email        String         @unique @db.VarChar
  password     String          @db.VarChar
  name         String?        @db.VarChar
  updated_at   DateTime?      @db.Timestamptz(6)
  balance      Int            @default(0) // poderia ser Bigint
  related      transactions[] @relation("RelatedTransactions")
  transactions transactions[] @relation("UserTransactions")
}

model transactions {
  id                 BigInt            @id @default(autoincrement())
  created_at         DateTime          @default(now()) @db.Timestamptz(6)
  amount             BigInt?
  balance_after      BigInt?
  description        String?           @db.VarChar
  related_user_id    String?
  reversed           Boolean           @default(false)
  user_id            String
  reversal_of        BigInt?
  type               transaction_type?
  related            profiles?         @relation("RelatedTransactions", fields: [related_user_id], references: [id], onDelete: SetDefault, onUpdate: Restrict)
  transactions       transactions?     @relation("transactionsTotransactions", fields: [reversal_of], references: [id], onDelete: SetDefault, onUpdate: Restrict)
  other_transactions transactions[]    @relation("transactionsTotransactions")
  user               profiles          @relation("UserTransactions", fields: [user_id], references: [id], onDelete: SetDefault, onUpdate: Restrict)
}

enum transaction_type {
  deposit
  transfer_sent
  transfer_received
  reversal
}
